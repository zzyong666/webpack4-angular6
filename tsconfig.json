{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "suppressImplicitAnyIndexErrors": true,
        "downlevelIteration": true,
        "outDir": "build/www/app",
        "lib": [
            "es7",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": "./",
        "paths": {
            "app/*": [
                "src/app/*"
            ]
        },
        "importHelpers": true,
        "allowJs": true
    },
    "include": [
        "src/app",
        // "src/test/javascript/"
    ],
    "exclude": [
        "node_modules"
    ]
}